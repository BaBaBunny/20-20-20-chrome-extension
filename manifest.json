{
    "manifest_version": 3,
    "name": "20/20/20 Rest Reminder",
    "version": "0.1",
    "description": "An extension to help remind you to take a break every 20 minutes for 20 seconds by looking at something 20 feet away.",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/eye16.png",
            "48": "assets/eye48.png",
            "128": "assets/eye128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "alarms",
        "notifications",
        "offscreen",
        "scripting",
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "assets/eye16.png",
        "48": "assets/eye48.png",
        "128": "assets/eye128.png"
    }
}